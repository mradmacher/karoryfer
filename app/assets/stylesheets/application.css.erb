:root {
#  --card-border-color: none;
}

.jumbotron {
  background-image: url(<%= asset_path('splash.jpg') %>);
  background-repeat: no-repeat;
  background-position: left top;
  color: white;
  padding: 2% 0% 15% 2%;
  margin: 0%;
}

.jumbotron a, .jumbotron a:link, .jumbotron a:visited {
  color: white;
}

.menu a, .menu a:link, .menu a:visited {
  text-decoration: none;
  color: black;
  margin: 2%;
}
.main-menu a {
  text-transform: uppercase;
  font-size: large;
}

h4 a, h4 a:link, h4 a:visited, h5 a, h5 a:link, h5 a:visited, h1 a, h1 a:link, h1 a:visited, h2 a, h2 a:link, h2 a:visited  {
  color: black;
}

ol {
  list-style-type: decimal;
}

.list-unstyled {
  list-style: none;
}

.long-text {
  text-align: justify;
  text-justify: newspaper;
}

.title {
  text-align: center;
}
