<%= form_for @artist, :html => {:multipart => true} do |f| %>
	<%= f.error_messages %>
  <div class="form-group">
    <%= f.label :name, t( 'label.artist.name' ) %>
    <%= f.text_field :name, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :reference, t( 'label.artist.reference' ) %>
    <%= f.text_field :reference, :disabled => (@artist.new_record?? false : true ), class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :summary, t( 'label.artist.summary' ) %>
    <%= f.text_field :summary, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :image, t( 'label.artist.image' ) %>
    <% if @artist.image? %>
      <p class="help-block"><%= image_tag( current_artist.image.icon.url, :alt => current_artist.name ) %></p>
      <div class="checkbox">
        <%= f.label :remove_image do %>
          <%= f.check_box :remove_image %>
          <%= t( "action.artist.remove_image" ) %>
        <% end %>
      </div>
    <% end %>
    <%= f.file_field :image %>
  </div>
  <div class="form-group">
    <%= f.label :description, t( 'label.artist.description' ) %>
    <%= f.text_area :description, class: 'form-control' %>
  </div>
  <button type="submit" class="btn btn-default"><%=t 'action.save' %></button>
<% end %>

