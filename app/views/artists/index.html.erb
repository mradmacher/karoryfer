<%= render_title t( 'helpers.title.artist.index' ) %>
<h1 class="hidden"><%=t 'helpers.title.artist.index' %></h1>
<% content_for :actions do %>
	<% if can? :write_artist, Artist %>
		<%= link_to_action t( 'helpers.action.artist.new' ), new_artist_path %>
	<% end %>
<% end %>
<ul class="thumbnails">
<% @artists.each do |artist| %>
  <li class="span2">
    <div class="thumbnail text-center">
      <% if artist.image? %>
        <a href="<%= artist_path( artist ) %>">
          <%= image_tag( artist.image.icon.url, :alt => artist.name, :title => artist.summary, :class => 'img-rounded img-polaroid' ) %>
        </a>
      <% end %>
      <h5><%= link_to artist.name, artist_path( artist ) %></h5>
    </div>
  </li>
<% end %>
</ul>
