<% pages = current_artist.pages %>
<div class="panel panel-default">
  <div class="panel-heading">
    <span class="h4"><%=t 'helpers.sidebar.title.page' %></span>
    <% if can? :write_page, Page %>
      <a href="<%= new_artist_page_path(current_artist) %>" class="btn btn-default btn-xs"><%= t( 'helpers.action.new' ) %></a>
    <% end %>
  </div>
  <% unless pages.empty? %>
    <div class="panel-body">
      <ul class="list-unstyled">
      <% pages.each do |page| %>
         <li><%= link_to page.title, artist_page_path(current_artist, page) %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
</div>

<div class="panel panel-default">
  <div class="panel-heading">
    <span class="h4">
      <%=t 'helpers.sidebar.title.event' %>
      <a href="<%= artist_events_path(current_artist) %>">
        <span class="badge"><%= current_artist.events.current.count %> / <%= current_artist.events.expired.count %></span></a>
    </span>
    <% if can? :write_event, Event %>
      <a href="<%= new_artist_event_path(current_artist) %>" class="btn btn-default btn-xs"><%= t( 'helpers.action.new' ) %></a>
    <% end %>
  </div>
  <% events = current_artist.events.current %>
  <% unless events.empty? %>
    <div class="panel-body">
      <ul class="event-list">
        <% events.each do |event| %>
          <li>
            <a href="<%= artist_event_path(current_artist, event) %>"><%= event_date( event ) %></a>
            <br />
            <%= event.title %>
          </li>
        <% end %>
      </ul>
    </div>
  <% end %>
</div>

