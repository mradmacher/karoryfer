<% if @current_artist_presenter.show_recent_pages? %>
  <div class="panel panel-default">
    <div class="panel-heading">
      <span class="h4"><%=t 'label.pages' %></span>
      <% @current_artist_presenter.with_new_page_path do |path| %>
        <a href="<%= path %>" class="btn btn-default btn-xs"><%= t('action.new') %></a>
      <% end %>
    </div>
    <div class="panel-body">
      <ul class="list-unstyled">
      <% @current_artist_presenter.recent_pages.each do |page_presenter| %>
         <li><%= link_to page_presenter.title, page_presenter.show_path %></li>
      <% end %>
      </ul>
    </div>
  </div>
<% end %>

<% if @current_artist_presenter.show_recent_events? %>
  <div class="panel panel-default">
    <div class="panel-heading">
      <span class="h4">
        <%=t 'label.events' %>
        <a href="<%= @current_artist_presenter.events_path %>">
          <span class="badge"><%= @current_artist_presenter.events_count %></span></a>
      </span>
      <% @current_artist_presenter.with_new_event_path do |path| %>
        <a href="<%= path %>" class="btn btn-default btn-xs"><%= t('action.new') %></a>
      <% end %>
    </div>
    <% unless @current_artist_presenter.recent_events.empty? %>
      <div class="panel-body">
        <ul class="event-list">
          <% @current_artist_presenter.recent_events.each do |event_presenter| %>
            <li>
              <a href="<%= event_presenter.show_path %>"><%= event_date(event_presenter) %></a>
              <br />
              <%= event_presenter.title %>
            </li>
          <% end %>
        </ul>
      </div>
    <% end %>
  </div>
<% end %>

