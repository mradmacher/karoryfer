<% if @artist_presenter.show_recent_pages? %>
  <div class="panel panel-default">
    <div class="panel-heading">
      <span class="h4"><%=t 'label.pages' %></span>
      <% if @artist_presenter.can_create_pages? %>
        <a href="<%= @artist_presenter.new_page_path %>" class="btn btn-default btn-xs"><%= t('action.new') %></a>
      <% end %>
    </div>
    <div class="panel-body">
      <ul class="list-unstyled">
      <% @artist_presenter.recent_pages.each do |page_presenter| %>
         <li><%= link_to page_presenter.title, page_presenter.path %></li>
      <% end %>
      </ul>
    </div>
  </div>
<% end %>

<% if @artist_presenter.show_recent_albums? %>
  <div class="panel panel-default">
    <div class="panel-heading">
      <span class="h4">
        <%=t 'label.albums' %>
        <a href="<%= @artist_presenter.albums_path %>">
          <span class="badge"><%= @artist_presenter.albums_count %></span>
        </a>
      </span>
      <% if @artist_presenter.can_create_albums? %>
        <a href="<%= @artist_presenter.new_album_path %>" class="btn btn-default btn-xs"><%= t('action.new') %></a>
      <% end %>
    </div>
    <div class="panel-body">
      <ul class="album-list">
        <% @artist_presenter.recent_albums.each do |album_presenter| %>
          <li><%= link_to album_presenter.title, album_presenter.path %></li>
        <% end %>
      </ul>
    </div>
  </div>
<% end %>
