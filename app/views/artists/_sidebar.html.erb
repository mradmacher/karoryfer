<% if @artist_presenter.show_recent_pages? %>
  <div class="panel panel-default">
    <div class="panel-heading">
      <span class="h4"><%=t 'label.pages' %></span>
      <% if @artist_presenter.can_create_pages? %>
        <a href="<%= @artist_presenter.new_page_path %>" class="btn btn-default btn-xs"><%= t('action.new') %></a>
      <% end %>
    </div>
    <div class="panel-body">
      <ul class="list-unstyled">
      <% @artist_presenter.recent_pages.each do |page_presenter| %>
         <li><%= link_to page_presenter.title, page_presenter.path %></li>
      <% end %>
      </ul>
    </div>
  </div>
<% end %>

<% if @artist_presenter.show_recent_events? %>
  <div class="panel panel-default">
    <div class="panel-heading">
      <span class="h4">
        <%=t 'label.events' %>
        <a href="<%= @artist_presenter.events_path %>">
          <span class="badge"><%= @artist_presenter.events_count %></span></a>
      </span>
      <% if @artist_presenter.can_create_events? %>
        <a href="<%= @artist_presenter.new_event_path %>" class="btn btn-default btn-xs"><%= t('action.new') %></a>
      <% end %>
    </div>
    <% unless @artist_presenter.recent_events.empty? %>
      <div class="panel-body">
        <ul class="event-list">
          <% @artist_presenter.recent_events.each do |event_presenter| %>
            <li>
              <a href="<%= event_presenter.path %>"><%= event_date(event_presenter) %></a>
              <br />
              <%= event_presenter.title %>
            </li>
          <% end %>
        </ul>
      </div>
    <% end %>
  </div>
<% end %>

