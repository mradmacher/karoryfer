<% pages = current_artist.pages %>
<% unless pages.empty? %>
  <div class="panel panel-default">
    <ul class="list-unstyled">
    <% pages.each do |page| %>
       <li><%= link_to page.title, artist_page_path(current_artist, page) %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<div class="panel panel-default">
  <div class="panel-heading">
    <h4>
      <%=t 'helpers.sidebar.title.event' %>
      <a href="<%= artist_events_path(current_artist) %>">
        <span class="badge"><%= current_artist.events.published.current.count %> / <%= current_artist.events.published.expired.count %></span>
      </a>
    </h4>
  </div>
  <% events = current_artist.events.some.current.published %>
  <% unless events.empty? %>
    <div class="panel-body">
      <ul class="event-list">
        <% events.each do |event| %>
          <li>
            <a href="<%= artist_event_path(current_artist, event) %>"><%= event_date( event ) %></a>
            <br />
            <%= event.title %>
          </li>
        <% end %>
      </ul>
    </div>
  <% end %>
</div>

