<p>
  <h4><%= link_to t( 'helpers.sidebar.title.home'), artist_path( current_artist ), :class => 'menu-link' %></h4>
</p>
<p>
	<ul class="unstyled">
	<% current_artist.pages.each do |page| %>
     <li><%= link_to page.title, artist_page_path( current_artist, page ) %></li>
  <% end %>
	</ul>
</p>
<% events = current_artist.events.some.published %>
<% unless events.empty? %>
<p>
  <h4><%= link_to t( 'helpers.sidebar.title.event' ), artist_events_path( current_artist ), :class => 'menu-link' %></h4>
	<dl class="unstyled">
  <% event_count = 0 %>
	<% current_artist.events.some.published.each do |event| %>
    <% event_count += 1 %>
		<dt><a href="<%= artist_event_path( current_artist, event ) %>">
      <%= event_icon( event.expired? ) %><%= event_date( event ) %></a></dt>
      <dd><%= event.title %></dd>
	<% end %>
    <% if event_count == Event::SOME_LIMIT %>
    <dt><%= link_to t( 'helpers.label.event.all' ), artist_events_url( current_artist ) %></dt>
    <dd></dd>
    <% end %>
	</dl>
</p>
<% end %>

<% posts = current_artist.posts.some.published %>
<% unless posts.empty? %>
<p>
  <h4><%= link_to t( 'helpers.sidebar.title.post' ), artist_posts_path( current_artist ), :class => 'menu-link' %></h4>
	<ul class="unstyled">
  <% post_count = 0 %>
	<% current_artist.posts.some.published.each do |post| %>
    <% post_count += 1 %>
		<li><%= post_icon %><%= link_to post.title, artist_post_path( current_artist, post ) %></li>
	<% end %>
    <% if post_count == Post::SOME_LIMIT %>
    <li><%= link_to t( 'helpers.label.post.all' ), artist_posts_url( current_artist ) %></li>
    <% end %>
	</ul>

</p>
<% end %>

<% videos = current_artist.videos.some %>
<% unless videos.empty? %>
<p>
  <h4><%= link_to t( 'helpers.sidebar.title.video' ), artist_videos_path( current_artist ), :class => 'menu-link' %></h4>

	<ul class="unstyled">
  <% video_count = 0 %>
	<% videos.each do |video| %>
    <% video_count += 1 %>
		<li><%= video_icon %><%= link_to video.title, artist_video_path( video.artist, video ) %></li>
	<% end %>
    <% if video_count == Video::SOME_LIMIT %>
    <li><%= link_to t( 'helpers.label.video.all' ), artist_videos_path( current_artist ) %></li>
    <% end %>
	</ul>
</p>
<% end %>

<% albums = current_artist.albums.published %>
<% unless albums.empty? %>
<p>
  <h4><%= link_to t( 'helpers.sidebar.title.album' ), artist_albums_path( current_artist ), :class => 'menu-link' %></h4>
	<ul class="unstyled">
	<% albums.each do |album| %>
		<li><%= link_to image_tag( album.image.icon.url, :alt => album.title ), artist_album_path( current_artist, album ) %></li>
	<% end %>
	</ul>
</p>
<% end %>

<% if current_user? %>
<p>
  <h4><%= t( 'helpers.label.drafts' ) %></h4>
  <ul class="unstyled">
    <li><%= link_to t( 'helpers.label.posts' ), drafts_artist_posts_url( current_artist ) %></li>
    <li><%= link_to t( 'helpers.label.events' ), drafts_artist_events_url( current_artist ) %></li>
  </ul>
</p>
<% end %>

