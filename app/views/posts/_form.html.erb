<%= form_for @post do |f| %>
	<%= f.error_messages %>
    <%= f.label :published do %>
      <%= f.check_box :published %>
      <%= t( "helpers.label.post.published" ) %>
    <% end %>
		<%= f.label :artist_id, t( "helpers.label.post.artist_id" ) %>
    <%= f.collection_select :artist_id, current_user.artists, :id, :name %>
		<%= f.label :title, t( "helpers.label.post.title" ) %>
		<%= f.text_field :title %>
    <fieldset>
      <legend><%= t( "helpers.label.post.poster" ) %></legend>
      <%= f.label :poster, t( 'helpers.label.post.poster' ) %>
      <% unless @post.poster_file_name.nil? %>
        <%= image_tag( @post.poster.url( :thumb ), :alt => @post.title ) %>
      <% end %>
      <%= f.file_field :poster %>
      <%= f.label :poster_url, t( "helpers.label.post.poster_url" ) %>
      <%= f.text_field :poster_url %>
    </fieldset>

    <%= f.label :body, t( "helpers.label.post.body" ) %>
    <%= f.text_area :body, :class => 'span8' %>

    <br />
    <%= f.submit t( 'helpers.action.save' ), :class => 'btn' %>
<% end %>
