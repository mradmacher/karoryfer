<%= render_title t( 'helpers.title.user.index' ) %>
<h1><%=t 'helpers.title.user.index' %></h1>
<% content_for :actions do %>
	<ul>
		<% if can? :write_user, User %>
			<%= link_to_action t( 'helpers.action.user.new' ), new_admin_user_path %>
		<% end %>
	</ul>
<% end %>
<ul>
	<% @users.each do |user| %>
		<li><%= link_to user.login, admin_user_path( user ) %></li>
	<% end %>
</ul>
