<%= render_title t('title.artists') %>
<% if current_user %>
  <% content_for :actions do %>
		<%= link_to_action t('action.add_artist'), new_admin_artist_path %>
	<% end %>
<% end %>
<% content_for(:header) do %>
  <h1><%= t('title.artists') %></h1>
<% end %>

<% @artist_presenters.each do |artist_presenter| %>
<div class="row">
  <div class="col-sm-4 col-md-2 col-lg-1">
  <% if artist_presenter.image? %>
    <a href="<%= artist_presenter.path %>">
      <%= image_tag(artist_presenter.image.icon.url, alt: artist_presenter.name, title: artist_presenter.summary, class: 'rounded') %>
    </a>
  <% end %>
  </div>
  <div class="col-sm-8 col-md-2 col-lg-2">
    <h5><a href="<%= artist_presenter.path %>"><%= artist_presenter.name %></a></h5>
    <p><%= artist_presenter.summary %></p>
  </div>
  <div class="col-md-8 col-lg-9 hidden-sm">
<% artist_presenter.recent_albums.each do |album_presenter| %>
    <a href="<%= album_presenter.path %>">
      <% if album_presenter.image? %>
        <%= image_tag(album_presenter.image.icon.url, alt: album_presenter.title, title: album_presenter.title, class: 'rounded') %>
      <% end %>
    </a>
<% end %>
  </div>
</div>
<% end %>
