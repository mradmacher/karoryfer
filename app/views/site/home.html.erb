<%= render partial: 'sidebar' %>

<div class="jumbotron">
  <h1><%=t 'label.site.name' %></h1>
  <p><%=t 'label.site.desc' %></p>
</div>

<div class="panel panel-default">
  <div class="panel-heading"><%= link_to t( 'title.artist.index' ), artists_url %></div>
  <div class="panel-body">
    <ul class="row list-unstyled">
      <% @artist_presenters.each do |presenter| %>
        <li class="col-sm-3 col-md-3 col-lg-3">
          <div class="thumbnail text-center"><%= render partial: 'artists/artist', locals: { artist_presenter: presenter } %></div>
        </li>
      <% end %>
    </ul>
  </div>
</div>

<div class="panel panel-default">
  <div class="panel-heading"><%= link_to t( 'title.album.index' ), albums_url %></div>
  <div class="panel-body">
    <ul class="row list-unstyled">
      <% @album_presenters.each do |presenter| %>
        <li class="col-sm-3 col-md-3 col-lg-3">
          <div class="thumbnail text-center"><%= render partial: 'albums/album', locals: { album_presenter: presenter } %></div>
        </li>
      <% end %>
    </ul>
  </div>
</div>

<%= render :partial => 'events/calendar_js' %>
