<%= render_title t('title.post.index') %>

<%= render partial: 'sidebar' %>

<h1><%=t 'title.post.index' %></h1>

<% if @post_presenters.empty? %>
  <%=t 'label.nothing_here_yet' %>
<% end %>
<ul class="media-list">
<% @post_presenters.each do |presenter| %>
  <li class="media img-rounded">
    <div class="media-body">
      <%= post_icon %><span class="label label-default"><%= presenter.artist.name %></span><small><%= post_date(presenter) %></small>
      <p><%= link_to presenter.title, presenter.path %></p>
    </div>
  </li>
<% end %>
</ul>
