<%= render_title @video.title %>
<h2><%= @video.title %></h2>
<p>
  <%= render partial: 'shared/show_actions', locals: { view: @current_view } %>
</p>
<p>
  <% if @video.embed_url %>
    <iframe width="420" height="315" src="<%= @video.embed_url %>" frameborder="0" allowfullscreen></iframe>
  <% end %>
</p>
<p>
  <%= render_text @video.body %>
</p>
<br />
<div class="well">
  <%= render partial: 'embeds/facebook', locals: { url: @current_view.show_path } %>
  <br />
  <%= render partial: 'embeds/twitter' %>
</div>
