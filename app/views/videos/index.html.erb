<%= render_title t('title.video.index') %>

<h2 class="hidden"><%= t 'title.video.index' %></h2>

<% if @views.empty? %>
  <%=t 'label.nothing_here_yet' %>
<% end %>
<ul class="row list-unstyled">
<% @views.each do |view| %>
  <li class="col-sm-3 col-md-3 col-lg-3">
    <div class="thumbnail text-center"><%= render partial: 'video', locals: { video: view } %></div>
  </li>
<% end %>
</ul>
