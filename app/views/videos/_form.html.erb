<%= form_for [current_artist, @video] do |f| %>
	<%= f.error_messages %>
  <div class="form-group">
    <%= f.label :title, t( "helpers.label.video.title" ) %>
    <%= f.text_field :title, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :url, t( "helpers.label.video.url" ) %>
    <%= f.text_field :url, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :body, t( "helpers.label.video.body" ) %>
    <%= f.text_area :body, class: 'form-control' %>
  </div>

  <button type="submit" class="btn btn-default"><%=t 'helpers.action.save' %></button>
<% end %>

