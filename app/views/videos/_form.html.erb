<%= form_for @video do |f| %>
	<%= f.error_messages %>
  <%= f.label :artist_id, t( "helpers.label.video.artist_id" ) %>
  <%= f.collection_select :artist_id, current_user.artists, :id, :name %>
  <%= f.label :title, t( "helpers.label.video.title" ) %>
  <%= f.text_field :title %>
  <%= f.label :url, t( "helpers.label.video.url" ) %>
  <%= f.text_field :url %>

  <%= f.label :body, t( "helpers.label.video.body" ) %>
  <%= f.text_area :body, :class => 'span8' %>
  <br />

  <%= f.submit t( 'helpers.action.save' ), :class => 'btn' %>
<% end %>

