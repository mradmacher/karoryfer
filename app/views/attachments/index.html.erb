<%= render_title @album_presenter.title %>
<h2>
  <%= @album_presenter.title %>
  <% unless @album_presenter.published? %>
    <small><%= t('label.album.unpublished') %></span>
  <% end %>
</h2>
<h3><%= t 'title.attachment.index' %></h3>
<p>
  <a href="<%= @album_presenter.show_path %>" class="btn btn-warning btn-xs"><%=t 'action.cancel_new' %></a>
</p>

<ul>
  <% @album_presenter.attachments.each do |attachment| %>
    <li>
      <a href="<%= attachment.file.url %>"><%= File.basename(attachment.file.path) %></a>
      <% if can? :write, attachment %>
        <a href="<%= artist_album_attachment_path(@album_presenter.artist, @album_presenter.resource, attachment) %>" class="btn btn-danger btn-xs" data-method="delete" data-confirm="<%=t 'action.destroy_confirmation' %>">
          <%=t 'action.delete' %>
        </a>
      <% end %>
    </li>
  <% end %>
</ul>

<h3><%=t 'title.attachment.new' %></h3>
<%= form_for [current_artist, @album_presenter.resource, @presenter.resource], :html => {:multipart => true} do |f| %>
	<%= f.error_messages %>
  <div class="form-group">
    <%= f.label :file, t('label.attachment.file') %>
    <%= f.file_field :file %>
  </div>
  <button type="submit" class="btn btn-default"><%=t 'action.save' %></button>
<% end %>

