<script type="text/javascript">
//<![CDATA[
$(function() {
  mesos = ["Styczeń", "Luty", "Marzec", "Kwiecień", "Maj", "Czerwiec", "Lipiec", "Sierpień", "Wrzesień", "Październik", "Listopad", "Grudzień"];
	dias = ["pn", "wt", "śr", "cz", "pt", "so", "nd"];

  $('#calendar').bic_calendar({
      nombresMes: mesos,
      dias: dias,
      req_ajax: {
        type: 'get',
        url: '/wydarzenia/kalendarz.json'
      }

  });
  $('[id$=' + '_' + "<%= @current_date %>".replace(/\//g, "_") + ']' ).css('background', '#e2007a');
  $('[id$=' + '_' + "<%= Date.today.strftime( '%-d/%-m/%Y' ) %>".replace(/\//g, "_") + ']' ).css('background', '#b1d900');

});
