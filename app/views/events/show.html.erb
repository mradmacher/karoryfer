<%= render_title @presenter.title %>
<h2><%= event_icon( @presenter.expired? ) %><%= @presenter.title %></h2>
<p>
  <%= render partial: 'shared/show_actions', locals: { presenter: @presenter } %>
</p>
<div class="media">
  <% if @presenter.poster? %>
    <%= link_to image_tag(@presenter.poster.thumb.url, :alt => @presenter.title, :class => 'media-object media-object-normal'),
      @presenter.poster.url, :class => 'pull-left' %>
  <% end %>
  <div class="media-body">
    <p class="lead">
      <%= event_date(@presenter.resource) %><br />
      <%= @presenter.location %>
      <% if @presenter.address.present? %>
        <br />
        <small><%= @presenter.address %></small>
      <% end %>
    </p>
  </div>
  <p>
  <% if @presenter.event_time.present? %>
    <strong><%=t 'label.event.event_time' %>:</strong> <%= @presenter.event_time %>
  <% end %>
  <% if @presenter.free_entrance? %>
    <br />
    <strong><%=t 'label.event.free_entrance' %></strong>
  <% elsif @presenter.price.present? %>
    <br />
    <strong><%=t 'label.event.price' %>:</strong> <%= @presenter.price %>
  <% end %>
  </p>
  <p>
    <ul class="list-unstyled">
    <% @presenter.recognized_external_urls.each do |url, service| %>
      <li><%= link_to service, url, :target => '_blank' %></li>
    <% end %>
    </ul>
  </p>
</div>
<br />

<div class="long-text">
  <%= render_text @presenter.body %>
</div>
<br />
<%= render partial: 'embeds/all' %>
