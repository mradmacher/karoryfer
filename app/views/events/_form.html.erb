<%= form_for [current_artist, @event] do |f| %>
	<%= f.error_messages %>
  <div class="form-group">
    <%= f.label :title, t( "helpers.label.event.title" ) %>
    <%= f.text_field :title, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :location, t( 'helpers.label.event.location' ) %>
    <%= f.text_field :location, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :address, t( 'helpers.label.event.address' ) %>
    <%= f.text_field :address, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :event_date, t( 'helpers.label.event.event_date' ) %>
    <%= f.date_select :event_date, order: [:day, :month, :year], include_blank: true, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :event_time, t( 'helpers.label.event.event_time' ) %>
    <%= f.text_field :event_time, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :duration, t( 'helpers.label.event.duration' ) %>
    <%= f.select :duration, (0..14).to_a.map{ |i| ["+#{i}", i] }, class: 'form-control' %>
  </div>

  <div class="checkbox">
    <%= f.label :free_entrance do %>
      <%= f.check_box :free_entrance %>
      <%= t( "helpers.label.event.free_entrance" ) %>
    <% end %>
  </div>

  <div class="form-group">
    <%= f.label :price, t( 'helpers.label.event.price' ) %>
    <%= f.text_field :price, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :poster, t( 'helpers.label.event.poster' ) %>
    <% if @event.poster? %>
      <p class="help-block"><%= image_tag( @event.poster.icon.url, :alt => @event.title ) %></p>
      <div class="checkbox">
        <%= f.label :remove_poster do %>
          <%= f.check_box :remove_poster %>
          <%= t( "helpers.action.event.remove_poster" ) %>
        <% end %>
      </div>
    <% end %>
    <%= f.file_field :poster %>
  </div>

  <div class="form-group">
    <%= f.label :body, t( "helpers.label.event.body" ) %>
    <%= f.text_area :body, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :external_urls, t( "helpers.label.event.external_urls" ) %>
    <%= f.text_area :external_urls, class: 'form-control', rows: 4 %>
  </div>

  <button type="submit" class="btn btn-default"><%=t 'helpers.action.save' %></button>
<% end %>
