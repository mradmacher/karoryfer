<h2 class="hidden"><%= t 'helpers.title.event.index' %></h2>

<div class="media">
  <% if event.poster? %>
    <%= link_to image_tag( event.poster.thumb.url, :alt => event.title, :class => 'media-object media-object-normal' ),
      event.poster.url, :class => 'pull-left' %>
  <% end %>
  <div class="media-body">
    <h3 class="media-heading"><%= event_icon( event.expired? ) %><%= event.title %>
      <% unless event.published? %>
        <span class="status">(<%= t('helpers.label.event.unpublished') %>)</span>
      <% end %>
    </h3>
    <p class="lead">
      <%= event_date( event ) %><br />
      <%= event.location %>
      <% if event.address.present? %>
        <br />
        <small><%= event.address %></small>
      <% end %>
    </p>
  </div>
  <p>
  <% if event.event_time.present? %>
    <strong><%=t 'helpers.label.event.event_time' %>:</strong> <%= event.event_time %>
  <% end %>
  <% if event.free_entrance? %>
    <br />
    <strong><%=t 'helpers.label.event.free_entrance' %></strong>
  <% elsif event.price.present? %>
    <br />
    <strong><%=t 'helpers.label.event.price' %>:</strong> <%= event.price %>
  <% end %>
  </p>
  <p>
    <ul class="list-unstyled">
    <% @event.recognized_external_urls.each do |url, service| %>
      <li><%= link_to service, url, :target => '_blank' %></li>
    <% end %>
    </ul>
  </p>
</div>
<br />

