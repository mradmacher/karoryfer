<%= form_for [current_artist, @album], :html => {:multipart => true} do |f| %>
	<%= f.error_messages %>
    <%= f.label :published do %>
      <%= f.check_box :published %>
      <%= t( "helpers.label.album.published" ) %>
    <% end %>
		<%= f.label :title, t( "helpers.label.album.title" ) %>
		<%= f.text_field :title %>
		<%= f.label :reference %>
		<%= f.text_field :reference, :disabled => (@album.new_record?? false : true ) %>
		<%= f.label :year, t( "helpers.label.album.year" ) %>
		<%= f.number_field :year %>
		<%= f.label :image, t( "helpers.label.album.image" ) %>
    <% if @album.image? %>
      <br />
      <%= image_tag( @album.image.icon.url, :alt => @album.title ) %>
      <%= f.label :remove_image do %>
        <%= f.check_box :remove_image %>
        <%= t( "helpers.action.album.remove_image" ) %>
      <% end %>
    <% end %>
		<%= f.file_field :image %>
    <%= f.label :license_id, t( "helpers.label.album.license_id" ) %>
    <%= f.collection_select :license_id, License.all, :id, :name, {:include_blank => true} %>
    <%= f.label :donation , t( "helpers.label.album.donation" )%>
    <%= f.text_area :donation, :class => 'span8' %>
    <%= f.label :description, t( "helpers.label.album.description" ) %>
    <%= f.text_area :description, :class => 'span8' %>
    <br />
		<%= f.submit t( 'helpers.action.save' ), :class => 'btn' %>
<% end %>


