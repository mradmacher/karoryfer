<%= render_title t( 'title.album.index') %>

<% if @albums.empty? %>
  <%= t( 'label.nothing_here_yet' ) %>
<% end %>
<ul class="row list-unstyled">
<% @albums.each do |album| %>
  <li class="col-sm-3 col-md-3 col-lg-3">
    <div class="thumbnail text-center"><%= render album %></div>
  </li>
<% end %>
</ul>

