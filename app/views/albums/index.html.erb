<%= render_title t( 'helpers.title.album.index') %>
<h2 class="hidden"><%= t 'helpers.title.album.index' %></h2>
<% content_for :context_actions do %>
  <% if can? :write_album, Album %>
    <%= link_to_action t( "helpers.action.album.new" ), new_artist_album_path(current_artist) %>
  <% end %>
<% end %>

<% if @albums.empty? %>
  <%= t( 'helpers.label.nothing_here_yet' ) %>
<% end %>
<ul class="row list-unstyled">
<% @albums.each do |album| %>
  <li class="col-sm-3 col-md-3 col-lg-3">
    <div class="thumbnail text-center"><%= render album %></div>
  </li>
<% end %>
</ul>

