<%= render_title @page.title %>
<h2><%= @page.title %></h2>
<p>
  <div class="btn-group">
    <% if can? :write_page, @page %>
      <a href="<%= edit_artist_page_path(@page.artist, @page) %>" class="btn btn-default btn-xs"><%=t 'helpers.action.edit' %></a>
    <% end %>
    <% if can? :write_page, @page %>
      <a href="<%= artist_page_path(@page.artist, @page) %>" class="btn btn-danger btn-xs" data-confirm="<%=t 'helpers.action.destroy_confirmation' %>" method="delete"><%=t 'helpers.action.delete' %></a>
    <% end %>
  </div>
</p>
<div class="long-text">
  <%= render_text @page.content %>
</div>
<br />
<div class="well">
  <%= render partial: 'embeds/facebook', locals: { url: artist_page_url( @page.artist, @page ) } %>
  <br />
  <%= render partial: 'embeds/twitter' %>
</div>


