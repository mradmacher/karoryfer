<%= form_for [current_artist, @page] do |f| %>
	<%= f.error_messages %>
  <div class="form-group">
    <%= f.label :title, t( 'helpers.label.page.title' ) %>
    <%= f.text_field :title, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :reference, t( 'helpers.label.page.reference' ) %>
    <%= f.text_field :reference, disabled: !@page.new_record?, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :content, t( 'helpers.label.page.content' ) %>
    <%= f.text_area :content, class: 'form-control' %>
  </div>
  <button type="submit" class="btn btn-default"><%=t 'helpers.action.save' %></button>
<% end %>


