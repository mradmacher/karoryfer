<!DOCTYPE html>
<html>
<head>
  <title><%= yield :title %><%= content_for?( :title ) ? '' : 'Karoryfer Lecolds' %></title>
  <meta name="author" content="Michał Radmacher - michal@radmacher.pl">
  <meta http-equiv="Content-Type" content="text/html;charset=utf-8">

	<%= favicon_link_tag %>
  <script src="http://code.jquery.com/jquery-1.9.1.min.js"></script>
  <script src="http://code.jquery.com/jquery-migrate-1.1.1.min.js"></script>
  <script src="/bootstrap/js/bootstrap.min.js"></script>
  <script src="/js/bic_calendar.min.js"></script>
  <%= javascript_include_tag '/js/rails.js' %>
  <%= javascript_include_tag '/js/jquery.jplayer.min.js' %>
  <%= javascript_include_tag '/js/jplayer.playlist.min.js' %>
  <%= javascript_include_tag '/js/karoryfer.js' %>
  <link href="/bootstrap/css/bootstrap.min.css" rel="stylesheet" media="screen">
  <%= stylesheet_link_tag '/css/karoryfer.css'%>
  <%= stylesheet_link_tag '/css/blue.monday/jplayer.blue.monday.css' %>
  <link href="/css/bic_calendar.css" rel="stylesheet" media="screen">
  <%= csrf_meta_tags %>
</head>
<body>
  <div class="container">
    <div class="row">
      <div class="span10">
        <div class="row">
          <div class="span3">
            <%= link_to image_tag( "logo.jpg", :alt => 'Karoryfer Lecolds', :title => 'Karoryfer Lecolds' ), root_url %>
          </div>
          <div class="span7">
            <ul class="nav nav-tabs">
              <% if current_artist? %>
                <li><%= link_to "Artyści", artists_url, :class => 'main-menu-link' %></li>
                <li><%= link_to "Wydawnictwa", albums_url, :class => 'main-menu-link' %></li>
                <li><%= link_to "Filmy", videos_url, :class => 'main-menu-link' %></li>
                <li><%= link_to "O nas", pages_url, :class => 'main-menu-link' %></li>
                <li class="active"><%= link_to current_artist.name, artist_url( current_artist ), :class => 'main-menu-link' %></li>
              <% else %>
                <li class="<%= controller_name == 'artists' ? 'active' : 'normal' %>">
                  <%= link_to "Artyści", artists_url, :class => 'main-menu-link' %></li>
                <li class="<%= controller_name == 'albums' ? 'active' : 'normal' %>">
                  <%= link_to "Wydawnictwa", albums_url, :class => 'main-menu-link' %></li>
                <li class="<%= controller_name == 'videos' ? 'active' : 'normal' %>">
                  <%= link_to "Filmy", videos_url, :class => 'main-menu-link' %></li>
                <li class="<%= controller_name == 'pages' ? 'active' : 'normal' %>">
                  <%= link_to "O nas", pages_url, :class => 'main-menu-link' %></li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
      <div class="span2">
        <ul class="inline">
          <% if page_url = Setting.get( 'karoryfer.youtube.url' ) %>
            <li><a href="<%= page_url %>" target="_blank">
              <%= image_tag( 'social/youtube.png', :alt => 'YouTube', :title => 'YouTube' ) %></a></li>
          <% end %>
          <% if page_url = Setting.get( 'karoryfer.facebook.url' ) %>
            <li><a href="<%= page_url %>" target="_blank">
              <%= image_tag( 'social/facebook.png', :alt => 'Facebook', :title => 'Facebook' ) %></a></li>
          <% end %>
          <% if page_url = Setting.get( 'karoryfer.twitter.url' ) %>
            <li><a href="<%= page_url %>" target="_blank">
              <%= image_tag( 'social/twitter.png', :alt => 'Twitter', :title => 'Twitter' ) %></a></li>
          <% end %>
          <% if page_url = Setting.get( 'karoryfer.flattr.url' ) %>
            <li><a href="<%= page_url %>" target="_blank">
              <%= image_tag( 'social/flattr.png', :alt => 'Flattr', :title => 'Flattr' ) %></a></li>
          <% end %>
        </ul>
      </div>
    </div>
    <% if current_user? %>
      <div class="row">
        <div class="span12">
          <ul class="inline">
            <%= yield :actions %>
          </ul>
        </div>
      </div>
    <% end %>
    <div class="row">
      <div class="span<%= content_for?( :sidebar ) ? '9' : '12' %>">
        <%= content_for?( :current_artist ) ? yield( :current_artist ) : yield %>
      </div>

    <% if content_for?( :sidebar ) %>
      <div class="span3">
        <%= yield :sidebar %>
      </div>
    <% end %>
    </div>

    <hr />
    <div class="row">
      <div class="span12">
        <ul class="inline">
          <% if current_user? -%>
            <li><a href="<%= admin_logout_url %>" class="btn btn-mini">Pa!</a></li>
            <li><a href="<%= admin_user_path( current_user ) %>" class="btn btn-mini">Moje konto</a></li>
          <% else -%>
            <li><a href="<%= admin_login_url %>" class="btn btn-mini">Zaloguj się</a></li>
          <% end %>
          <% if can? :manage, User %>
            <li><a  href="<%= admin_users_path %>" class="btn btn-mini"><%= t( 'helpers.title.user.index' ) %></a></li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
</body>
</html>
