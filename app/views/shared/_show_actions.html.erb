<div class="btn-group">
  <% if presenter.can_be_updated? %>
    <a href="<%= presenter.edit_path %>" class="btn btn-default btn-xs"><%=t 'action.edit' %></a>
  <% end %>
  <% if presenter.can_be_deleted? %>
    <a href="<%= presenter.path %>" class="btn btn-danger btn-xs" data-confirm="<%=t 'action.destroy_confirmation' %>" data-method="delete"><%=t 'action.delete' %></a>
  <% end %>
</div>
