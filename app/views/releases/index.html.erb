<%= render_title album.title %>
<h2>
  <%= album.title %>
  <% unless album.published? %>
    <small><%= t('label.album.unpublished') %></span>
  <% end %>
</h2>
<h3><%= t 'title.release.index' %></h3>
<p>
  <a href="<%= album.path %>" class="btn btn-warning btn-xs"><%=t 'action.cancel_new' %></a>
</p>

<ul>
  <% album.releases.each do |release| %>
    <li>
      <%= release.format %>&nbsp;(<%= release.url %>)
      <br />
      <%=t 'label.release.downloads' %>: <%= release.downloads %>
      <br />
      <% if current_user.can_manage_releases?(album.resource) %>
        <a href="<%= artist_album_release_path(album.artist, album.resource, release.resource) %>" class="btn btn-danger btn-xs" data-method="delete" data-confirm="<%=t 'action.destroy_confirmation' %>">
          <%=t 'action.delete' %>
        </a>
      <% end %>
    </li>
  <% end %>
</ul>

<% if current_user.can_manage_releases?(album.resource) %>
  <h3><%=t 'title.release.new' %></h3>
  <%= render :partial => 'form', locals: { resource: @presenter.resource } %>
<% end %>
